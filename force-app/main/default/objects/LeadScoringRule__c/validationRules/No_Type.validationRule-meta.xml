<?xml version="1.0" encoding="UTF-8" ?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>No_Type</fullName>
    <active>true</active>
    <description>Errors if Type is not selected or == --None--</description>
    <errorConditionFormula
    >ISPICKVAL(Type__c,&apos;&apos;)||ISPICKVAL(Type__c,&apos;--None--&apos;)</errorConditionFormula>
    <errorDisplayField>Type__c</errorDisplayField>
    <errorMessage
    >You must select a Type such as Lead or Campaign Member</errorMessage>
</ValidationRule>
